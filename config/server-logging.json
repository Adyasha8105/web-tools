{
  "version": 1,
  "disable_existing_loggers": true,

  "formatters": {
    "detailed": {
      "format": "[%(asctime)s][%(levelname)s] %(name)s %(filename)s:%(funcName)s:%(lineno)d | %(message)s",
      "datefmt": "%H:%M:%S"
    }
  },

  "handlers": {
    "console": {
      "level": "WARN",
      "class": "logging.StreamHandler",
      "formatter": "detailed",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "level": "WARN",
      "class": "logging.handlers.RotatingFileHandler",
      "encoding": "utf8",
      "formatter": "detailed",
      "filename": "logs/server.log",
      "maxBytes": 10485760,
      "backupCount": 10
    }
  },

  "loggers": {
    "": {
      "handlers": ["file", "console"],
      "propagate": false
    },
    "mediameter": {
      "level": "DEBUG",
      "propagate": true
    },
    "requests": {
      "level": "DEBUG",
      "propagate": true
    }
  }

}